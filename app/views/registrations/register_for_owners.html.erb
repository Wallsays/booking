<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => url_for(:controller => 'registrations', :action => 'create_owner') ) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div> 

  <div><%= f.label :phone %><br />
  <%= f.text_field :phone %></div>
  
  <div><%= f.label :usertype %>
  <%= f.select :usertype, options_for_select(["Restaurant Owner"]), :class => 'genForm_dropBox' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>


  <div><%= f.submit "Sign up" %></div>
<% end %>

<br />
<%= render "devise/shared/links" %>
