<%= simple_form_for([@restaurant], html: { class: "form-horizontal"}) do |f| %>

  
  <%= f.input :name, label: "Name" %>
  <%= f.input :category, label: "Type/Category" %>
  <%= f.input :cuisine, label: "Cuisine" %>
  <%= f.input :price, label: "Price" %>
  <%= f.input :budget, label: "Budget" %>
  <%= f.input :lat, label: "Latitude" %>
  <%= f.input :lng, label: "Longitude" %>
  <%= f.input :misc, label: "Misc", as: :text, input_html: { rows: "3"} %>
 
  <div class="actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
   
<% end %> 